{
  "functions": {
    "api/**/*": {
      "includeFiles": "files/**/*"
    }
  },
  "headers": [
    {
      "source": "/materials/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    },
    {
      "source": "/hdri/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    },
    {
      "source": "/models/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/materials", "destination": "/api/materials" },
    {
      "source": "/materials/material",
      "destination": "/api/materials/material"
    },
    {
      "source": "/materials/paths",
      "destination": "/api/materials/paths"
    },
    {
      "source": "/materials/categories",
      "destination": "/api/materials/categories"
    },
    { "source": "/hdri", "destination": "/api/hdri" },
    {
      "source": "/hdri/hdri",
      "destination": "/api/hdri/hdri"
    },
    {
      "source": "/hdri/paths",
      "destination": "/api/hdri/paths"
    },
    {
      "source": "/hdri/categories",
      "destination": "/api/hdri/categories"
    },
    { "source": "/models", "destination": "/api/models" },
    {
      "source": "/models/model",
      "destination": "/api/models/model"
    },
    {
      "source": "/models/paths",
      "destination": "/api/models/paths"
    },
    {
      "source": "/models/categories",
      "destination": "/api/models/categories"
    }
  ]
}
